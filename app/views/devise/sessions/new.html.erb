<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:'flex flex-col gap-2'}) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: 'border w-full p-2', placeholder: :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: 'border w-full p-2', placeholder: :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-4">
    <%= f.submit "Log in", class: 'border p-2 w-full' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>